<UserControl x:Class="HospitalWPF.User_Controls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalWPF.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Search:" Height="20" Width="70" Background="Transparent" Foreground="Gray" FontSize="15"/>
        <TextBox Text="{Binding SearchBox, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Background="#666666" Foreground="LightGray" Height="30" Width="300" VerticalContentAlignment="Center" FontSize="15"/>
    </StackPanel>
</UserControl>
